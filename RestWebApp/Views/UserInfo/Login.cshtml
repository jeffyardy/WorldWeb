@model RestWebApp.Models.User
@{
    ViewData["Title"] = "Login";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Login</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <form role="form" asp-action="Login" asp-controller="UserInfo" method="post">
                <div class="form-group">
                    <label for="UserID">User Id</label>
                    <input type="userid" name="UserID" asp-for="UserId" autocomplete="off" class="form-control input-sm" placeholder="User Id" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" value="Login" class="btn btn-info btn-block" />
            </form>
        </div>
    </div>
</div>



